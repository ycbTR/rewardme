<div class="page-header">
  <h1>Settings</h1>
</div>

<%= form_for current_user.settings, :url => admin_update_settings_path, :method => :put,:html => {:class => "form-horizontal"} do |f| %>


    <div class="control-group">
      <%= label_tag nil, "Timer Border Color", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag "settings[timer_border_color]", current_user.settings.timer_border_color %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag nil, "Timer Background Color", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag "settings[timer_background_color]", current_user.settings.timer_background_color %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag nil, "Name Color", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag "settings[name_color]", current_user.settings.name_color %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag nil, "Reward Color", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag "settings[reward_color]", current_user.settings.reward_color %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag nil, "Description Color", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag "settings[description_color]", current_user.settings.description_color %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag nil, "Box Background Color", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag "settings[box_background_color]", current_user.settings.box_background_color %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag nil, "Box Border Color", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag "settings[box_border_color]", current_user.settings.box_border_color %>
      </div>
    </div>



    <div class="form-actions">
      <%= f.submit 'Save', :class => "btn btn-primary" %>
    </div>
<% end %>