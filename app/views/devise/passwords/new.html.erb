<div class="page-header">
  <h1>Forgot password?</h1>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :class => "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="control-group">
      <%= f.label :email, :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :email, :autofocus => true, :class => "text_field" %>
      </div>
    </div>


    <div class="form-actions">
      <div><%= f.submit "Send me reset password instructions", :class => "btn" %></div>
      <div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
<% end %>

